<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dataLay">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="7.5dp"
                android:background="@color/colorPrimary"
                android:id="@+id/led1_layout">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_bulb"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="LED 1: ON"
                    android:id="@+id/led1_status"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"
                    android:textSize="17dp"
                    android:textColor="#FF212121" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorPrimary"
                android:id="@+id/led2_layout">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_bulb"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="LED 2: ON"
                    android:id="@+id/led2_status"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"
                    android:textSize="17dp"
                    android:textColor="#FF212121" />
            </FrameLayout>
        </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="7.5dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/frameLayout" >

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:id="@+id/imageView4"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_bulb"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LED 3: ON"
                        android:id="@+id/led3_status"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:textSize="17dp"
                        android:textColor="#FF212121" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/frameLayout2" >

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:id="@+id/imageView5"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_bulb"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LED 4: ON"
                        android:id="@+id/led4_status"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:textSize="17dp"
                        android:textColor="#FF212121" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="7.5dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/frameLayout3" >

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:id="@+id/RGB_image"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_bulb"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LED RGB"
                        android:id="@+id/rgb_status"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:textSize="17dp"
                        android:textColor="#FF212121" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/frameLayout4" >

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:id="@+id/imageView7"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_onoff"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Kontakt 1: ON"
                        android:id="@+id/switch1_status"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:textSize="17dp"
                        android:textColor="#FF212121" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="7.5dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/frameLayout5"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Kontakt 2: ON"
                        android:id="@+id/switch2_status"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:textSize="17dp"
                        android:textColor="#FF212121" />

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:id="@+id/imageView8"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_onoff"
                        android:layout_marginBottom="10dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/frameLayout6"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Kontakt 3: ON"
                        android:id="@+id/switch3_status"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:textSize="17dp"
                        android:textColor="#FF212121" />

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:id="@+id/imageView9"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_onoff"
                        android:layout_marginBottom="10dp" />
                </FrameLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>


</RelativeLayout>